<Window x:Class="Kinect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kinect"
        mc:Ignorable="d"
        Title="MainWindow">
    <Grid Margin="0,0,0,0" Background="#1BA1E2">
        <Grid Height="25" VerticalAlignment="Bottom">
            <StatusBar  Margin="0,0,0,0" Height="25">
                <TextBlock x:Name="statusText" TextWrapping="Wrap" Text="Ready" Margin="0,0,0,0" />
            </StatusBar>
        </Grid>
        <Grid Margin="0,0,0,25">
            <Grid Height="50" VerticalAlignment="Top">
                <ComboBox x:Name="comboBox" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" SelectedIndex="0" >
                    <ComboBoxItem Content="Color" HorizontalAlignment="Left" Width="92"/>
                    <ComboBoxItem Content="Depth" HorizontalAlignment="Left" Width="92"/>
                    <ComboBoxItem Content="Skeleton" HorizontalAlignment="Left" Width="92"/>
                </ComboBox>
            </Grid>
            <Grid Margin="10,50,10,10" Background="#FFFFFF">
                <Image x:Name="imageBox" Margin="0,0,0,0"  />
            </Grid>
        </Grid>
    </Grid>
</Window>
